<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="fieldText">
        <item name="android:height">@dimen/size_60</item>
        <item name="android:paddingEnd">@dimen/size_20</item>
        <item name="android:paddingStart">@dimen/size_20</item>
        <item name="android:textSize">@dimen/text_15</item>
        <item name="android:textColor">@color/blackText</item>
        <item name="android:textColorHint">@color/blackText</item>
        <item name="android:ems">10</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">@font/sfpro</item>
        <item name="android:background">@color/white</item>
        <item name="android:autofillHints" tools:ignore="NewApi">false</item>

    </style>

    <style name="principalButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:maxHeight">@dimen/size_60</item>
        <item name="android:minHeight">@dimen/size_60</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/sfpro</item>
        <item name="android:background">@drawable/sty_button_principal</item>
        <item name="android:backgroundTint">@color/primaryDark</item>
        <item name="android:layout_marginHorizontal" tools:ignore="NewApi">@dimen/size_15</item>
    </style>

    <style name="tittleContentText">
        <item name="android:textSize">@dimen/text_15</item>
        <item name="android:textColor">@color/blackText</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">@font/sfpro</item>
        <item name="android:lineBreakStyle" tools:ignore="NewApi">normal</item>
    </style>

    <style name="bodyContentText">
        <item name="android:textSize">@dimen/text_8</item>
        <item name="android:fontFamily">@font/sfpro</item>
        <item name="android:textColor">@color/grayText</item>
    </style>

    <style name="tittleDetailsText">
        <item name="android:textSize">@dimen/text_24</item>
        <item name="android:textColor">@color/blackText</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">@font/sahnaz</item>
        <item name="android:lineBreakStyle" tools:ignore="NewApi">normal</item>
    </style>

    <style name="bodyDetailsText">
        <item name="android:textSize">@dimen/text_13</item>
        <item name="android:fontFamily">@font/sfpro</item>
        <item name="android:textColor">@color/grayText</item>
        <item name="android:paddingTop">@dimen/size_5</item>
        <item name="android:paddingBottom">@dimen/size_5</item>
    </style>

</resources>